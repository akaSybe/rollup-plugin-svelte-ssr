{
  "name": "rollup-plugin-svelte-ssr",
  "version": "1.0.3",
  "description": "Server-side rendering of Svelte app at build-time using Rollup plugin",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest",
    "semantic-release": "semantic-release",
    "cz": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akaSybe/rollup-plugin-svelte-ssr.git"
  },
  "keywords": [
    "svelte",
    "ssr",
    "rollup-plugin"
  ],
  "author": "Aleksandr Shestakov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akaSybe/rollup-plugin-svelte-ssr/issues"
  },
  "homepage": "https://github.com/akaSybe/rollup-plugin-svelte-ssr#readme",
  "dependencies": {
    "@semantic-release/git": "^7.0.16"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/runtime": "^7.6.3",
    "@types/jest": "^24.0.18",
    "cz-conventional-changelog": "^3.0.2",
    "del": "^5.1.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rollup": "^1.23.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^6.2.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-svelte": "^5.1.0",
    "semantic-release": "^17.2.3",
    "svelte": "^3.12.1"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/tests.js"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
